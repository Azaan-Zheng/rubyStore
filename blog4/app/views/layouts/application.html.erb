<!DOCTYPE html>
<html>
  <head>
    <title>Blog4</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <div id="banner">
    <h1>CSDM</h1>
    </div>
    <div id="left-panel">
      <div id='username'>
        <%= current_user.email if current_user %>
        <%= "Please log in first." if !current_user %>
      </div>
      <div id='operand'>
        <% if user_signed_in? %>
          <%= button_to "Log out", destroy_user_session_path, method: :get %>
          <%= link_to "Personal center", current_user %><br>
          <%= link_to "Blogs square", blogs_path %><br>
          <%= link_to "Users square", users_path %>
        <% else %>
          <%= button_to "Log in", new_user_session_url, method: :get %>
          <%= button_to "Sign in", new_user_registration_url, method: :get %>
        <% end %>
      </div>
    </div>

    <div id="main-panel">
    <%= yield %>
    </div>

    <div id="footer">
    Copyright wty &copy; 2012
    </div>

  </body>
</html>
