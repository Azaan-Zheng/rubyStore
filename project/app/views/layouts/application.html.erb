<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="mystore">
    <div class="store_banner">
      <div class="logo">
        <%= image_tag("logo.png") %>
      </div>
      <div class="title">
        <%= @page_title || "Bao Tao 网购家园" %>
      </div>
      <div class='status'>
        <% if user_signed_in? %>
          <% if user_admin? %>
            <div class='status_option'>
              <%= link_to "商品大厅", store_url %>
            </div>
            <div class='status_option'>
              <%= link_to "订单中心", orders_path %>
            </div>
            <div class='status_option'>
              <%= link_to "退出登录", destroy_user_session_path, method: :get %>
            </div>
          <% else %>
            <div class='status_option'>
              <%= link_to "购物大厅", store_url %>
            </div>
            <div class='status_option'>
              <%= link_to "个人中心", current_user %>
            </div>
            <div class='status_option'>
              <%= link_to "退出登录", destroy_user_session_path, method: :get %>
            </div>
          <% end %>
          
        <% else %>
          <div class='status_option'>
            <%= link_to "登录", new_user_session_url, method: :get %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="store_content">
      <%# <div class="columns">
        <div class="side">
          side
        </div>
      </div> %>

      <div class="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
